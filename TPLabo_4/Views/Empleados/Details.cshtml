@model TPLabo_4.Models.Empleado

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.edad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.edad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.experiencia)
        </dt>
