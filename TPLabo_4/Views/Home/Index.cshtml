@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img src="/imagenes/logo.png" width="350" height="200" />
    <h2>¿Que desea ver?</h2>
    <a class="nav-link text-dark" asp-area="" asp-controller="Ferreterias" asp-action="Index">Ferreteria</a>
    <a class="nav-link text-dark" asp-area="" asp-controller="Carpinterias" asp-action="Index">Carpinteria</a>
    <a class="nav-link text-dark" asp-area="" asp-controller="Calidades" asp-action="Index">Calidad</a> 
    <a class="nav-link text-dark" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>
    <br/>
    <h3>Productos sin Stock</h3>
    <br />
    <h4>Ferreteria</h4>
    @foreach (var ferreteria in Model.FerreteriasSinStock)
    {
        <p>@ferreteria.nombre</p>
    }
    <br />
    <h4>Carpinteria</h4>
    @foreach (var carpinteria in Model.CarpinteriasSinStock)
    {
        <p>@carpinteria.nombre</p>
    }
</div>
